{
  "name": "my-rpg",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "author": "Sathesh Previn",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:electron": "cross-env ELECTRON_DEV=1 concurrently \"npm:dev\" \"wait-on http://localhost:5173 && electron electron/main.js\"",
    "build:electron": "npm run build && electron-builder"
  },
  "devDependencies": {
    "vite": "^7.1.7",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^24.13.3",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "phaser": "^3.90.0"
  },
  "build": {
    "appId": "com.mycompany.myrpg",
    "productName": "Autumn Knight",
    "directories": { "output": "dist" },
    "files": [
      "dist/**",
      "electron/main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
